<?xml version="1.0" encoding="UTF-8"?>
<sy:switchyard xmlns:bean="urn:switchyard-component-bean:config:2.0" xmlns:resteasy="urn:switchyard-component-resteasy:config:2.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912" xmlns:sy="urn:switchyard-config:switchyard:2.0" name="switchyard-seminar-final" targetNamespace="urn:com.example.switchyard:switchyard-seminar-final:1.0">
  <sca:composite name="switchyard-seminar-final" targetNamespace="urn:com.example.switchyard:switchyard-seminar-final:1.0">
    <sca:component name="OrderServiceBean">
      <bean:implementation.bean class="com.example.switchyard.switchyard_seminar_final.accounting.OrderServiceBean"/>
      <sca:service name="OrderService">
        <sca:interface.java interface="com.example.switchyard.switchyard_seminar_final.accounting.OrderService"/>
      </sca:service>
      <sca:reference name="AccountingService">
        <sca:interface.java interface="com.example.switchyard.switchyard_seminar_final.accounting.AccountingService"/>
      </sca:reference>
    </sca:component>
    <sca:reference name="AccountingService" multiplicity="0..1" promote="OrderServiceBean/AccountingService">
      <sca:interface.java interface="com.example.switchyard.switchyard_seminar_final.accounting.AccountingService"/>
      <resteasy:binding.rest name="rest1">
        <resteasy:interfaces>com.example.switchyard.switchyard_seminar_final.accounting.AccountingServiceResource</resteasy:interfaces>
        <resteasy:address>https://localhost:7171</resteasy:address>
        <resteasy:basic>
          <resteasy:user>admin</resteasy:user>
          <resteasy:password>foo</resteasy:password>
          <resteasy:host>localhost</resteasy:host>
          <resteasy:port>7171</resteasy:port>
        </resteasy:basic>
      </resteasy:binding.rest>
    </sca:reference>
  </sca:composite>
</sy:switchyard>